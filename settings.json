{
  "workbench.colorTheme": "Catppuccin Macchiato",
  "window.zoomLevel": 1.2,
  "editor.formatOnSave": true,
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "chat.editor.fontWeight": "bold",
  "editor.fontSize": 17,
  "apc.sidebar.titlebar": { "fontSize": 12 },
  "editor.lineHeight": 1.8,
  "editor.suggestLineHeight": 16,
  "terminal.integrated.fontWeight": "bold",
  "terminal.integrated.lineHeight": 1.1,
  "terminal.integrated.cursorStyle": "line",
  "editor.renderWhitespace": "none",
  "workbench.activityBar.location": "hidden",
  "workbench.statusBar.visible": false,
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  "editor.hideCursorInOverviewRuler": true,
  "workbench.editor.tabActionCloseVisibility": true,
  "explorer.decorations.colors": true,
  "explorer.compactFolders": false,
  "git.decorations.enabled": false,
  "editor.fontLigatures": true,
  "editor.guides.highlightActiveBracketPair": false,
  "editor.guides.bracketPairsHorizontal": false,
  "editor.renderLineHighlight": "none",
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "auto",
  "editor.folding": true,
  "editor.foldingHighlight": false,
  "window.title": " ",
  "editor.cursorBlinking": "solid",
  "editor.cursorSmoothCaretAnimation": "on",
  "workbench.iconTheme": "catppuccin-macchiato",
  "workbench.sash.size": 5,
  "workbench.sideBar.location": "right",
  "editor.matchBrackets": "never",
  "editor.guides.indentation": false,
  "files.autoSaveDelay": 1000,
  "workbench.editor.showTabs": "single",
  "window.commandCenter": false,
  "editor.occurrencesHighlight": "off",
  "editor.stickyScroll.enabled": false,
  "scm.diffDecorationsGutterPattern": {
    "added": false,
    "modified": false
  },
  "scm.diffDecorations": "none",
  "scm.diffDecorationsGutterAction": "none",
  "apc.stylesheet": {
    "*": "font-family: Iosevka SS09 Light",
    ".editor .title": "background: transparent !important",
    ".monaco-editor .cursor": "background: linear-gradient(to bottom, #7f00ff, #e100ff)",
    ".editor title .actions-container": "flex-direction: row-reverse",
    ".editor .scrollbar:hover .slider": "visibility:initial",
    ".editor .scrollbar .slider": "visibility: hidden"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "git.openRepositoryInParentFolders": "never",
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
          "comment",
          "comment.block",
          "comment.block.documentation",
          "comment.line",
          "constant",
          "constant.character",
          "constant.character.escape",
          "constant.numeric",
          "constant.numeric.integer",
          "constant.numeric.float",
          "constant.numeric.hex",
          "constant.numeric.octal",
          "constant.other",
          "constant.regexp",
          "constant.rgb-value",
          "emphasis",
          "entity",
          "entity.name",
          "entity.name.class",
          "entity.name.function",
          "entity.name.method",
          "entity.name.section",
          "entity.name.selector",
          "entity.name.tag",
          "entity.name.type",
          "entity.other",
          "entity.other.attribute-name",
          "entity.other.inherited-class",
          "invalid",
          "invalid.deprecated",
          "invalid.illegal",
          "keyword",
          "keyword.control",
          "keyword.operator",
          "keyword.operator.new",
          "keyword.operator.assignment",
          "keyword.operator.arithmetic",
          "keyword.operator.logical",
          "keyword.other",
          "markup",
          "markup.bold",
          "markup.changed",
          "markup.deleted",
          "markup.heading",
          "markup.inline.raw",
          "markup.inserted",
          "markup.italic",
          "markup.list",
          "markup.list.numbered",
          "markup.list.unnumbered",
          "markup.other",
          "markup.quote",
          "markup.raw",
          "markup.underline",
          "markup.underline.link",
          "meta",
          "meta.block",
          "meta.cast",
          "meta.class",
          "meta.function",
          "meta.function-call",
          "meta.preprocessor",
          "meta.return-type",
          "meta.selector",
          "meta.tag",
          "meta.type.annotation",
          "meta.type",
          "punctuation.definition.string.begin",
          "punctuation.definition.string.end",
          "punctuation.separator",
          "punctuation.separator.continuation",
          "punctuation.terminator",
          "storage",
          "storage.modifier",
          "storage.type",
          "string",
          "string.interpolated",
          "string.other",
          "string.quoted",
          "string.quoted.double",
          "string.quoted.other",
          "string.quoted.single",
          "string.quoted.triple",
          "string.regexp",
          "string.unquoted",
          "strong",
          "support",
          "support.class",
          "support.constant",
          "support.function",
          "support.other",
          "support.type",
          "support.type.property-name",
          "support.variable",
          "variable",
          "variable.language",
          "variable.name",
          "variable.other",
          "variable.other.readwrite.ts",
          "variable.parameter"
        ],
        "settings": {
          "fontStyle": ""
        }
      }
    ]
  },
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "editor.minimap.enabled": false,
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  // update this accordingly
  "git-autoconfig.configList": [
    {
      "user.email": "mirageaditya@gmail.com",
      "user.name": "Aditya"
    }
  ],
  "editor.guides.bracketPairs": false,
  "diffEditor.experimental.showMoves": true,
  "editor.formatOnType": true,
  "thunder-client.defaultURL": "http://localhost:",
  "security.workspace.trust.untrustedFiles": "open",
  "liveServer.settings.donotShowInfoMsg": true,
  "editor.fontFamily": "Iosevka SS09 Light",
  "editor.fontVariations": false,
  "terminal.integrated.mouseWheelZoom": true,
  "files.autoSave": "afterDelay",
  "explorer.confirmDragAndDrop": false,
  "terminal.integrated.fontSize": 11,
  "apc.font.family": "Iosevka SS09 Light"
}
